@using EntityLayer.Concrate
@model List<Xəbərlər>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLyaout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xəbərlər</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Başlıq</th>
                            <th>Məlumat</th>
                            <th>Sil</th>
                            <th>Yenilə</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.XəbərlərID</td>
                                <td>@item.Başlıq</td>
                                <td>@item.Məlumat</td>
                                <td><a href="/Xəbərlər/DeleteXəbərlər/@item.XəbərlərID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Xəbərlər/UpdateXəbərlər/@item.XəbərlərID" class="btn btn-success">Yenilə</a></td>
                            </tr>
                        }


                    </tbody>
                </table>

            </div>
            <br />
            <br />
            <a href="/Xəbərlər/AddXəbərlər" class="btn btn-outline-info">Yeni Müəllim Yüklə</a>
        </div>
    </div>
</div>

