@model EntityLayer.Concrate.Xəbərlər

@{
    ViewData["Title"] = "AddXəbərlər";
    Layout = "~/Views/Shared/_AdminLyaout.cshtml";
}

@using (Html.BeginForm("AddXəbərlər", "Xəbərlər", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Xəbərlər Yüklə </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlıq</label>
                        <input type="text" class="form-control" name="Başlıq">
                    </div>
                    <div class="form-group">
                        <label>Məlumat</label>
                        @Html.TextAreaFor(x => x.Məlumat, 3, 10, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Yüklə</button>
                    <a href="/Xəbərlər/Index" class="btn btn-danger">Ləğv Et</a>
                </form>
            </div>
        </div>
    </div>
}


